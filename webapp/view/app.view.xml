<mvc:View
  controllerName = "walkthrough.controller.app"
  xmlns = "sap.m"
  xmlns:mvc = "sap.ui.core.mvc"
  displayBlock = "true">

  <!-- Step-11 -->
  <Shell>
    <App>
      <pages>
        <Page
          title="{i18n>homePageTitle}">
          <content>
            <Panel
              headerText="{i18n>helloPanelTitle}">
              <content>
                <!-- Step-5 -->
                <Button
                  text = "{i18n>showHelloButtonText}"
                  press = ".onShowHello"/>

                  <!-- Step-7 -->
                <Input
                  value="{/recipient/name}"
                  description="Hello {/recipient/name}"
                  valueLiveUpdate="true"
                  width="60%"/>
              </content>
            </Panel>
          </content>
        </Page>
      </pages>
    </App>
  </Shell>

    <!-- Step-4 -->
  <!-- <Text
    text="Hello world"/> -->
</mvc:View>
