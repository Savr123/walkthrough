<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Panel headerText="{i18n>pageComposerSaveDialog-transportInformation}">
        <content>
            <VBox>
                <Label text="{i18n>pageComposerSaveDialog-package}"
                       labelFor="sapUshellPageSaveDialog-packageInput"/>
                <Input
                        id="sapUshellPageSaveDialog-packageInput"
                        maxLength="30"
                        required="true"
                        liveChange=".onChange"
                        valueStateText="Package must not be empty"
                        value="{
                            path: '/package',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                                minLength: 1
                            }
                        }"
                        type="Text"
                        showSuggestion="true"
                        valueLiveUpdate="true"
                        suggestionItems="{suggestions>/PackageSuggestions}" >
                    <suggestionItems>
                        <core:Item text="{suggestions>Name}" />
                    </suggestionItems>
                </Input>
                <Label
                        id="sapUshellPageSaveDialog-workbenchRequestSelectLabel"
                        text="{i18n>pageComposerSaveDialog-workbenchRequest}"
                        required="true"
                        labelFor="sapUshellPageSaveDialog-workbenchRequestSelect"/>

                <Select id="sapUshellPageSaveDialog-workbenchRequestSelect"
                        forceSelection="false"
                        change=".onChange"
                        selectedKey="{/workbenchRequest}"
                        width="100%"
                        items="{
                            path: 'suggestions>/WorkbenchSuggestions',
                            sorter: { path: 'Name' }
                        }">
                    <core:Item key="{suggestions>Name}" text="{suggestions>Name}" />
                </Select>
            </VBox>
        </content>
    </Panel>
</core:FragmentDefinition>