<Dialog
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        id="sapUshellPageSaveDialog"
        title="{i18n>pageComposerSaveDialogTitle}"
        beforeOpen=".onBeforeOpen"
        afterClose=".afterClose"
        class="sapUiContentPadding">
    <content>
        <Panel headerText="{i18n>pageComposerSaveDialog-pageInformationHeader}">
            <content>
                <Label text="{i18n>pageComposerSaveDialog-id}" labelFor="sapUshellPageSaveDialog-idInput"/>
                <Input
                        maxLength="35"
                        required="true"
                        id="sapUshellPageSaveDialog-idInput"
                        type="Text"
                        liveChange=".onChange"
                        valueLiveUpdate="true"
                        value="{
                            path: '/id',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                                minLength: 1
                            }
                        }"
                />
                <Label text="{i18n>pageComposerSaveDialog-title}" labelFor="sapUshellPageSaveDialog-titleInput"/>
                <Input id="sapUshellPageSaveDialog-titleInput" value="{/title}" maxLength="100" />
                <Label text="{i18n>pageComposerSaveDialog-description}" labelFor="sapUshellPageSaveDialog-descriptionInput"/>
                <Input id="sapUshellPageSaveDialog-descriptionInput" value="{/description}" maxLength="100"/>
            </content>
        </Panel>
        <core:ExtensionPoint name="TransportInformation"/>
    </content>
    <beginButton>
        <Button
                id="sapUshellPageComposerSaveDialog-saveButton"
                text="{i18n>pageComposerSaveBtn}"
                press=".onSave"
                enabled="{path: '/validation', formatter: '.validate'}"
        />
    </beginButton>
    <endButton>
        <Button id="sapUshellPageComposerSaveDialog-cancelButton" text="{i18n>cancelDialogBtn}" press=".onCancel" />
    </endButton>
</Dialog>