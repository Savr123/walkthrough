<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core" >
    <Dialog
            id="pageOverviewDeleteDialog"
            title="{i18n>pageOverviewDeleteTitle}"
            type="Message">
        <content>
            <Text text="{/sApprovalText}" />
        </content>

        <beginButton>
            <Button text="{i18n>pageOverviewDeleteConfirm}" press="onDeleteConfirm" />
        </beginButton>

        <endButton>
            <Button text="{i18n>pageOverviewDeleteCancel}" press="onDeleteCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>