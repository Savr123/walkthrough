<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core" >
    <Dialog
            id="pageOverviewDeleteDialog"
            title="{i18n>pageOverviewDeleteTitle}"
            type="Message"
            afterClose="onAfterClose"
            state="Warning">
        <content>
            <Text text="{/approvalText}" />
        </content>

        <beginButton>
            <Button text="{i18n>pageOverviewDeleteConfirm}" press="onConfirm" />
        </beginButton>

        <endButton>
            <Button text="{i18n>pageOverviewDeleteCancel}" press="onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>