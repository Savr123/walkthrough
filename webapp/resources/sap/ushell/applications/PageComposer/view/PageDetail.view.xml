<mvc:View
        controllerName="sap.ushell.applications.PageComposer.controller.PageDetail"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.f"
        xmlns:mvc="sap.ui.core.mvc">
    <f:DynamicPage fitContent="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <VBox class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                        <Title text="{/page/content/title}"/>
                        <Label text="{/page/content/id}"/>
                    </VBox>
                </f:heading>
                <f:actions>
                    <Button
                            text="{i18n>pageComposerDetailEdit}"
                            type="Emphasized"
                            press="onEdit"/>
                    <Button
                            text="{i18n>pageComposerDetailCopy}"
                            type="Transparent"
                            press="onCopy"/>
                    <Button
                            text="{i18n>pageComposerDetailDelete}"
                            type="Transparent"
                            press="onDelete"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <VBox fitContainer="true">
                <Toolbar>
                    <Title text="{i18n>pageComposerFormTitle}" level="H1"/>
                </Toolbar>

                <form:Form id="sapUshellPageComposerDetailForm"
                           editable="false"
                           class="sapUiLargeMarginBottom">
                    <form:layout>
                        <form:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="4"
                                labelSpanS="4"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="3"
                                columnsL="3"
                                columnsM="1"/>
                    </form:layout>
                    <form:formContainers>
                        <form:FormContainer>
                            <form:formElements>
                                <form:FormElement label="{i18n>pageComposerDescription}">
                                    <Text text="{/page/content/description}" id="pageDetailDescription"/>
                                </form:FormElement>
                                <form:FormElement label="{i18n>pageComposerAssignedRole}">
                                    <Text text="" id="pageDetailRole"/>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>

                        <form:FormContainer>
                            <form:formElements>
                                <form:FormElement label="{i18n>pageComposerCreatedBy}" >
                                    <FormattedText htmlText="{path: '/page/content/createdBy', formatter: '.formatter.bold'}"
                                                   id="pageDetailCreatedBy"
                                    />
                                </form:FormElement>
                                <form:FormElement label="{i18n>pageComposerCreatedOn}" >
                                <FormattedText htmlText="{path: '/page/content/createdOn', formatter: '.formatter.boldDate'}"
                                               id="pageDetailCreatedOn"
                                />
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>

                        <form:FormContainer>
                            <form:formElements>
                                <form:FormElement label="{i18n>pageComposerChangedBy}">
                                    <FormattedText htmlText="{path: '/page/content/modifiedBy', formatter: '.formatter.bold'}"
                                                   id="pageDetailModifiedBy"
                                    />
                                </form:FormElement>
                                <form:FormElement label="{i18n>pageComposerChangedOn}">
                                    <FormattedText htmlText="{path: '/page/content/modifiedOn', formatter: '.formatter.boldDate'}"
                                                   id="pageDetailModifiedOn"
                                    />
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>

                <Toolbar>
                    <Title text="{i18n>pageComposerLayout}" level="H1"/>
                </Toolbar>

                <layoutData>
                    <FlexItemData minHeight="0"/>
                </layoutData>
            </VBox>
        </f:content>
    </f:DynamicPage>>
</mvc:View>